<div class="row">
	<span class="col-lg-12 drop-bottom">To search for products you must select a product group.</span> 
</div>
<form action="/home" method="post" id="home_page">
	<div class="row drop bottom">
		<div class="col-lg-6">
			<select class="form-control">
				<option value="0">Please select a group</option>
				{{#each groups}}
				<option value="{{id}}">{{name}}</option>
				{{/each}}
			</select>
		</div>
	</div>
	<br />
</form>
<div id="myTable"></div>